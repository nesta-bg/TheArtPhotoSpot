<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Art Photo Spot: @ViewBag.Title</title>
    <link href="~/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">The Art Photo Spot</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="About">About</a></li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid body-content">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()

        <div class="container-fluid">
            <hr />
            <footer class="container">
                <div class="text-center">Copyright 2019 The Art Photo Spot LLC</div>
            </footer>
        </div>
    </div>

    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @*ability to have scripts on other pages*@
    @RenderSection("scripts", false)
</body>
</html>